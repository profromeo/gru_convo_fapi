    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: MAIN File",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: TEST File",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/test_convo.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}